{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "composite": true
  },
  "include": ["src", "scripts/testRabbit.ts"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../../shared" }
  ]
}
